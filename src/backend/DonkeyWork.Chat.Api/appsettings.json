{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8881"
      }
    }
  },
  "KeycloakConfiguration": {
    "ValidIssuer": "https://identity.donkeywork.dev/realms/donkeywork",
    "ClientId": "donkeywork",
    "ClientSecret": "placeholder"
  },
  "CookieSettings": {
    "Domain": "",
    "SecureOnly": true,
    "HttpOnly": true
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {}
      }
    ],
    "Properties": {
      "Application": "DonkeyWork.Chat.Api"
    }
  },
  "AllowedOrigins": [
    "https://chat.donkeywork.dev"
  ],
  "AllowedModelsConfiguration": {
    "AllowedModels": {
      "OpenAi": [
        "gpt-4o-mini"
      ],
      "Anthropic": [
        "claude-3-5-haiku-latest"
      ]
    }
  },
  "MicrosoftOAuthConfiguration": {
    "AuthorizeUrl": "https://login.microsoftonline.com/{0}/oauth2/v2.0/authorize",
    "TokenUrl": "https://login.microsoftonline.com/{0}/oauth2/v2.0/token",
    "UserInfoUrl": "https://graph.microsoft.com/v1.0/me",
    "ClientId": "YOUR_CLIENT_ID",
    "ClientSecret": "YOUR_CLIENT_SECRET",
    "TenantId": "common",
    "Scopes": [
      "openid",
      "offline_access",
      "profile",
      "email",
      "Mail.Send",
      "Mail.ReadWrite",
      "Files.Read.All",
      "Files.ReadWrite.All",
      "Tasks.ReadWrite"
    ]
  },
  "GoogleOAuthConfiguration": {
    "AuthorizeUrl": "https://accounts.google.com/o/oauth2/v2/auth",
    "TokenUrl": "https://oauth2.googleapis.com/token",
    "UserInfoUrl": "https://www.googleapis.com/oauth2/v2/userinfo",
    "ClientId": "YOUR_CLIENT_ID",
    "ClientSecret": "YOUR_CLIENT_SECRET",
    "Scopes": [
      "openid",
      "email",
      "profile",
      "https://www.googleapis.com/auth/gmail.send",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/drive.readonly",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "DiscordOAuthConfiguration": {
    "AuthorizeUrl": "https://discord.com/oauth2/authorize",
    "TokenUrl": "https://discord.com/api/oauth2/token",
    "UserInfoUrl": "https://discord.com/api/users/@me",
    "ClientId": "YOUR_CLIENT_ID",
    "ClientSecret": "YOUR_CLIENT_SECRET",
    "Scopes": [
      "identify",
      "email",
      "guilds",
      "guilds.members.read",
    ]
  }
}